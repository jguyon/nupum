{
  "version": 2,
  "name": "nupum",
  "alias": ["nupum"],
  "regions": ["cdg1"],
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node"
    },
    {
      "src": "public/**",
      "use": "@now/static"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build/client" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.+\\.[0-9a-f]{16}\\..+$)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" },
      "dest": "/static/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}
